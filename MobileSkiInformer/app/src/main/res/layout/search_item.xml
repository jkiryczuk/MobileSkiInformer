<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="jkiryczuk.pl.mobileskiinformer.model.NearbyResort"/>
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/cardNearby"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/miniature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:alpha=".7"
                android:scaleType="centerCrop"
                android:src="@drawable/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:text="@{item.name}"
                android:padding="5dp"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="23dp"
                        android:padding="5dp"
                        android:text="@{item.address}"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="2dp"
                        android:padding="5dp"
                        android:text="@{item.borough}"
                        android:textColor="@color/white" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="23dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:foregroundGravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="2dp"
                        app:favouriteState="@{item.favourite}"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        />


                    <TextView
                        android:id="@+id/counterSlopes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="2dp"
                        android:padding="5dp"
                        android:text="heheszkowy placeholder"
                        android:textColor="@color/white"
                        android:gravity="right"
                        />
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@{item.getDistance}"
                android:textColor="@color/white" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>