    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OkreÅ›l poziom"/>
    <Spinner
        android:id="@+id/level_spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseVoi"/>

    <Spinner
        android:id="@+id/voivodeship_spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_county"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseCounty"/>

    <Spinner
        android:id="@+id/county_spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <View
        android:id="@+id/line_county"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_borough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseBorough"/>

    <Spinner
        android:id="@+id/borough_spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <View
        android:id="@+id/line_borough"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>
</layout>